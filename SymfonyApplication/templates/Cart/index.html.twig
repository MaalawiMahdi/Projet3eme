{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="tm-main-content" id="top">
        <div class="tm-top-bar-bg"></div>
        <div class="tm-top-bar" id="tm-top-bar">
            <!-- Top Navbar -->
            <div class="container">
                <div class="row">
                    {%  include('Bootstraptemplates/navbarfront.html.twig')  with { 'iduser': user.id,'path': path,'texte':texte }  %}
                </div>
            </div>
        </div>
    </div>
    <div class="tm-section tm-section-pad tm-bg-img tm-position-relative" id="tm-section-1">
    <div class="container ie-h-align-center-fix">
    <div class="row">
    <div class="tm-bg-white" style="width: 80%;">
    <div class="bg-light p-5">
        <h1>Votre panier</h1>
    </div>
    {% if items | length >0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>prix</th>
                <th>quantite</th>
                <th>total</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.ProduitService.titre }}</td>
                    <td>{{ item.ProduitService.getPrixUnitaire() }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.ProduitService.getPrixUnitaire()  * item.quantity }}</td>
                    <td>
                        <a href="{{ path('cart_remove',{'id':item.ProduitService.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>

            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colpsan="3" class="text_right">Total : </td>
                <td>{{ total }}</td>
                <td><a href="/commande/new" class="btn btn-primary"> Passer une commande </a></td>

            </tr>
            </tfoot>
        </table>
    </div>
    </div>
    </div>
        </div>

    {% else %}
        <p style="margin-left: 15px;">Surprise, c'est vide !</p>
    {% endif %}
{% endblock %}