

{% include 'temp1.html.twig' %}
<style>
    button {
        color: #FFFFFF;
        background-color: #ee5057;
        border-color: #ee5057;
        border-radius: 6px;
    }
    button:hover {
        color: #FFFFFF;
        opacity: 0.8;
        background-color: #ee5057;
        border-color: #ee5057;
        border-radius: 6px;
    }
    button:active {
        color: #FFFFFF;
        background-color: #ee5057;
        border-color: #ee5057;
        border-radius: 6px;
    }
</style>
<div class="box">
    <div class="box-header">
        <h1 style ="margin-bottom: 2%; text-align: center; color: #ee5057 ;  " > Gestion des Categories Aides </h1>

        <form action="  {{path('ajouterCategorieAide')}} "><button>Ajouter</button></form>

    </div>
    <!-- /.box-header -->
    <div class="box-body">
        {{ form(formSearch,{'attr': {'novalidate': 'novalidate'}}) }}
        <table id="example1" class="table table-bordered table-striped">
            <thead>
            <tr>
                <th>Icone</th>
                {# <th>IdCategorieAide</th> #}
                <th>Titre</th>
                <th>Modifier</th>
                <th>Supprimer</th>

            </tr>
            </thead>
            <tbody>


            {% for CA in listCategorieAide %}
                <tr>
                    <td><img style=" padding-right: 2px; padding-left: 2px;  width:60px ; hight: 60px ;" src="{{ asset('uploads/' ~ CA.getLienIcon())}}"></td>
                    {# <td>{{ CA.id }}</td> #}
                    <td>{{ CA.titre }}</td>
                    <td><form action="  {{path('modifierCategorieAide',{id:CA.id})}} "><button>Modifier</button></form></td>
                    <td><form action="  {{path('supprimerCategorieAide',{id:CA.id})}} "><button>Supprimer</button></form></td>

                </tr>
            {% endfor %}



            </tbody>

        </table>
    </div>
    <!-- /.box-body -->
</div>
