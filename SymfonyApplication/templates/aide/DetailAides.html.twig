

{% extends 'base.html.twig' %}
{% block body %}
    <style>
        button {
            color: #FFFFFF;
            background-color: #ee5057;
            border-color: #ee5057;
            border-radius: 6px;
            padding: 8px;
            font-size:18px;
        }
        button:hover {
            color: #FFFFFF;
            opacity: 0.8;
            background-color: #ee5057;
            border-color: #ee5057;
            border-radius: 6px;
        }
        button:active {
            color: #FFFFFF;
            background-color: #ee5057;
            border-color: #ee5057;
            border-radius: 6px;
        }

    </style>

    {% block js %} {% endblock %}
    {% include 'Bootstraptemplates/bootstrapAide1.html.twig' with   { 'iduser': iduser }  %}
    <div style="margin-top:6%; text-align: center;">
        <h3 class="tm-font-semibold tm-color-primary tm-article-title-3" style=" font-size:200%; margin-bottom: 2%;">{{ DetailAides.titre }}</h3>
    </div>
    <div class=" tm-bg-white-shadow tm-pad " style=" margin-bottom:20%; margin-left: 25%; width:50%;">
        <article class="media tm-margin-b-20 tm-media-1"  >
            <img style=" width:50%;" src="{{ asset('uploads/'~ DetailAides.getLienImage())}}" alt="Image">
            <div class="media-body tm-media-body-1 tm-media-body-v-center" style="font-size: 130%;">
                <!--h3 class="tm-font-semibold tm-color-primary tm-article-title-3">{{ DetailAides.titre }}</h3-->
                <!br-->
                <p style="font-weight: bold;">Description:</p>
                <p>{{ DetailAides.description}}</p>

                <p style="font-weight: bold;">Adresse: </p>
                <p>{{ DetailAides.adresse}}</p>

                <p style="font-weight: bold;">Numéro téléphone:</p>
                <p>{{ DetailAides.getNumTell()}}</p>
                <img  src="{{ asset('' ~ captcha.getLienImageCaptcha())}}">
                {{ form(formCaptcha) }}


            </div>
        </article>
    </div>
    {% include 'Bootstraptemplates/bootstrapAide2.html.twig' %}
{% endblock %}
